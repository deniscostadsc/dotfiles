[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[init]
    templatedir = ~/.git_template/

[commit]
    gpgsign = true
    template = ~/.config/git/commit_message_template

[core]
    editor = vim
    autocrlf = input

[merge]
    tool = meld

[alias]
    a = add
    alias = config --get-regexp alias
    contributors = !git log --no-merges |\
        grep '^Author:' |\
        sed 's/[^<]*<\\|>[^>]*$//g' |\
        sort |\
        uniq -c |\
        sort -nr
    b = branch
    c = commit -m
    ca = commit -am
    cached = diff --cached
    ck = checkout
    cl = clone
    d = diff
    f = fetch
    g = grep
    l = log
    lg = log --color --graph \
        --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' \
        --abbrev-commit
    m = merge
    pl = pull
    plr = pull --rebase
    ps = push
    r = remote
    rb = rebase
    s = status

[push]
    default = current

[pull]
    default = current
