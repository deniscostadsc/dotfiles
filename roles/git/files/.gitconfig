[includeIf "gitdir:~/dev/"]
    path = ~/.gitconfig-work

[includeIf "gitdir:~/projects/"]
    path = ~/.gitconfig-personal

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[init]
    templatedir = ~/.config/git/git_repo_template/

[commit]
    gpgsign = true
    template = ~/.config/git/commit_message_template

[core]
    editor = vim
    autocrlf = input

[merge]
    tool = meld

[alias]
    a = add
    alias = config --get-regexp alias
    b = branch
    c = commit
    ca = commit -am
    cached = diff --cached
    ck = checkout
    cl = clone
    # cleanup-branchs = !git branch -D $(git branch | grep -v "*\|master\|main")
    cm = commit -m
    contributors = !git log --no-merges |\
        grep '^Author:' |\
        sed 's/[^<]*<\\|>[^>]*$//g' |\
        sort |\
        uniq -c |\
        sort -nr
    d = diff
    f = fetch
    g = grep
    l = log
    lg = log --color --graph \
        --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' \
        --abbrev-commit
    m = merge
    pl = pull
    plr = pull --rebase
    ps = push
    r = remote
    rb = rebase
    s = status

[push]
    default = current

[pull]
    default = current
